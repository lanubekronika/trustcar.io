ADMIN_PASS=changeme

# OpenAI API for AI report generation and chatbot
OPENAI_API_KEY=sk-proj-your-key-here

# NAPA Auto Parts API (for real-time parts pricing by VIN)
# Get your API key from: https://developer.napaonline.com/
NAPA_API_KEY=your-napa-api-key
NAPA_API_URL=https://api.napaonline.com/v1

# TireRack API (for real-time tire pricing by size)
# Get your API key from: https://www.tirerack.com/content/tirerack/desktop/en/api.html
TIRERACK_API_KEY=your-tirerack-api-key
